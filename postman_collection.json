{
  "info": {
    "name": "Logicredit Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection covering authentication endpoints"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://localhost:8000"
    }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"StrongPass123!\",\n  \"name\": \"Example User\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/register"
        }
      }
    },
    {
      "name": "Verify Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{EMAIL_TOKEN}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/verify-email"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/login"
        }
      }
    },
    {
      "name": "TOTP Verify",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-CSRF-Token",
            "value": "{{CSRF_TOKEN}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/mfa/totp/verify"
        }
      }
    },
    {
      "name": "Password Reset Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/password/reset/request"
        }
      }
    },
    {
      "name": "Password Reset Confirm",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{RESET_TOKEN}}\",\n  \"new_password\": \"NewPassword123!\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/password/reset/confirm"
        }
      }
    },
    {
      "name": "List Sessions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/auth/sessions"
        }
      }
    }
  ]
}
